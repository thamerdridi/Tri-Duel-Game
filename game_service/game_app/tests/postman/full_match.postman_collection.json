    {
      "key": "base_url",
      "value": "http://localhost:8003",
      "type": "string"
    },
    {
      "key": "alice_token",
      "value": "your-alice-jwt-here",
      "type": "string"
    },
    {
      "key": "bob_token",
      "value": "your-bob-jwt-here",
      "type": "string"
    },
    {
      "key": "match_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "alice_cards",
      "value": "",
      "type": "string"
    },
    {
      "key": "bob_cards",
      "value": "",
      "type": "string"
    },
    {
      "key": "current_round",
      "value": "1",
