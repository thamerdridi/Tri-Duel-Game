{
  "info": {
    "name": "Tri-Duel - Player Service (Postman Tests)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Unit-style API tests for Player Service (and Auth Service for tokens). Set collection variables `auth_base_url` and `player_base_url` to match your deployment. If using self-signed HTTPS, disable SSL verification in Postman."
  },
  "variable": [
    { "key": "auth_base_url", "value": "http://localhost:8001" },
    { "key": "player_base_url", "value": "https://localhost:8002" },
    { "key": "player1_username", "value": "player1" },
    { "key": "player2_username", "value": "player2" },
    { "key": "game_service_username", "value": "game_service" },
    { "key": "password", "value": "pass123" },
    { "key": "player1_token", "value": "" },
    { "key": "player2_token", "value": "" },
    { "key": "game_service_token", "value": "" },
    { "key": "match_id", "value": "" }
  ],
  "item": [
    {
      "name": "Setup (Auth Service)",
      "item": [
        {
          "name": "Register player1 (valid)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{auth_base_url}}/auth/register", "host": ["{{auth_base_url}}"], "path": ["auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"{{player1_username}}\",\"email\":\"player1@test.com\",\"password\":\"{{password}}\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register returns 200 or 400 (already exists)', function () {",
                  "  pm.expect([200, 400]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Register player2 (valid)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{auth_base_url}}/auth/register", "host": ["{{auth_base_url}}"], "path": ["auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"{{player2_username}}\",\"email\":\"player2@test.com\",\"password\":\"{{password}}\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register returns 200 or 400 (already exists)', function () {",
                  "  pm.expect([200, 400]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Register game_service (valid)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{auth_base_url}}/auth/register", "host": ["{{auth_base_url}}"], "path": ["auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"{{game_service_username}}\",\"email\":\"game_service@test.com\",\"password\":\"{{password}}\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register returns 200 or 400 (already exists)', function () {",
                  "  pm.expect([200, 400]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Login player1 (valid)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{auth_base_url}}/auth/login", "host": ["{{auth_base_url}}"], "path": ["auth", "login"] },
            "body": { "mode": "raw", "raw": "{\"username\":\"{{player1_username}}\",\"password\":\"{{password}}\"}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login returns 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set('player1_token', json.access_token);",
                  "pm.test('Token present', function () { pm.expect(json.access_token).to.be.a('string'); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Login player2 (valid)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{auth_base_url}}/auth/login", "host": ["{{auth_base_url}}"], "path": ["auth", "login"] },
            "body": { "mode": "raw", "raw": "{\"username\":\"{{player2_username}}\",\"password\":\"{{password}}\"}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login returns 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
