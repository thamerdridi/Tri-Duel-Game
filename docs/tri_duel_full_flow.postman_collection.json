  "item": [
    {
      "name": "Register User 1",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"testuser1\", \"email\": \"test1@example.com\", \"password\": \"TestPass123\"}"
        },
        "url": {
          "raw": "{{auth_service_base_url}}/register",
          "host": ["{{auth_service_base_url}}"],
          "path": ["register"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Registration succeeds or username taken\", function () {",
              "    var jsonData = pm.response.json();",
              "    if (pm.response.code === 200) {",
              "        pm.expect(jsonData).to.have.property('username');",
              "    } else if (pm.response.code === 400) {",
              "        pm.expect(jsonData.detail).to.eql('Username already taken.');",
              "    } else {",
              "        throw new Error('Unexpected status code: ' + pm.response.code);",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
